# NZBHydra2 Configuration
NZBHYDRA2_URL=http://localhost:5076
NZBHYDRA2_API_KEY=your-api-key-here

# Usenet Provider 1
PROVIDER_1_NAME=Newshosting
PROVIDER_1_HOST=news.newshosting.com
PROVIDER_1_PORT=563
PROVIDER_1_USERNAME=your-username
PROVIDER_1_PASSWORD=your-password
PROVIDER_1_CONNECTIONS=10
PROVIDER_1_SSL=true

# Usenet Provider 2 (optional)
# PROVIDER_2_NAME=UsenetExpress
# PROVIDER_2_HOST=news.usenetexpress.com
# PROVIDER_2_PORT=563
# PROVIDER_2_USERNAME=your-username
# PROVIDER_2_PASSWORD=your-password
# PROVIDER_2_CONNECTIONS=10
# PROVIDER_2_SSL=true

# NNTP Proxy Settings (optional)
# Aggregates all providers into a single NNTP endpoint for SABnzbd/NZBGet
NNTP_PROXY_ENABLED=true
NNTP_PROXY_PORT=119
NNTP_PROXY_HOST=0.0.0.0
NNTP_PROXY_AUTH_USER=usenet
NNTP_PROXY_AUTH_PASS=usenet

# Addon Settings
ADDON_PORT=7000
ADDON_BASE_URL=http://localhost:7000
LOG_LEVEL=DEBUG

# Security (optional)
# If set, all Stremio URLs will require this token as a prefix (e.g. /mysecret/manifest.json)
# SECURITY_TOKEN=mysecretpassword

# Validation Settings
CACHE_TTL_SECONDS=3600
VALIDATION_SAMPLE_SIZE=5
MAX_CONCURRENT_VALIDATIONS=20